{
  "name": "ceviz-core",
  "type": "module",
  "version": "0.0.3",
  "description": "Core performance analysis rules for Ceviz",
  "author": "productdevbook",
  "license": "MIT",
  "keywords": [
    "performance",
    "analyzer",
    "profiler",
    "optimization",
    "complexity",
    "memory-leak",
    "async",
    "lint",
    "static-analysis"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "ceviz": "./dist/cli.mjs"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "release": "pnpm build && pnpm publish --no-git-checks --access public",
    "analyze": "pnpm build && node dist/cli.mjs analyze",
    "bumpp": "bumpp package.json"
  },
  "dependencies": {
    "c12": "^3.3.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "glob": "^11.0.3",
    "hookable": "^5.5.3",
    "open": "^10.2.0",
    "ora": "^9.0.0",
    "oxc-parser": "^0.96.0",
    "oxc-transform": "^0.96.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.0",
    "bumpp": "^10.3.1",
    "tsdown": "^0.16.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  }
}
